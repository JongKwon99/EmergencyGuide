<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="12dp"
    android:layout_marginTop="30dp"
    tools:context=".Evacuation.EvacuationActivity">
    <ImageView
        android:id="@+id/iv_eva_back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_back_button"
        android:layout_marginTop="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="대피 페이지"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:includeFontPadding="false"
        android:layout_marginStart="8dp"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintStart_toEndOf="@id/iv_eva_back"
        app:layout_constraintTop_toTopOf="@id/iv_eva_back"
        app:layout_constraintBottom_toBottomOf="@id/iv_eva_back"/>
    <TextView
        android:id="@+id/tv_eva_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="대피소 위치"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginTop="38dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_eva_back" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="긴급 시 대피소 위치 확인"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_eva_location"/>
</androidx.constraintlayout.widget.ConstraintLayout>
